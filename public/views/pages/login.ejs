<!-- Growth Explorer logo -->
<img src="../images/growth_explorer_large.png" class="growth-explorer">

<!-- Login Form and MacBook icon -->
<div class="row">
	<!-- Login Form -->
	<div class="login-form"  ng-controller="LoginController">	
		<form class="col s12" method="post" ng-submit="userlogin(reqParams)" action="/login">
			<div class="row">
				<div class="input-field col s11">
					<input id="email" type="email" name="email" class="validate" ng-model="reqParams.email" />
					<label for="email">Email</label>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s11">
					<input id="password" type="password" name="password" class="validate" ng-model="reqParams.employeeID" />
					<label for="password">EmployeeID</label>
				</div>
			</div>
			<button class="waves-effect waves-light col s11 btn logon" type="submit">Log In</button>
			<div class="signup">
				<p>New User? &nbsp;<a class="waves-effect waves-light btn">Sign Up</a></p>
			</div>
		</form>
	</div>
	<!-- MacBook -->
	<img src="../images/laptop.png" class="laptop">	
</div>

<!-- dividing line between login section and rest of page -->
